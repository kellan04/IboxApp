<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cv_item_top10"
    card_view:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/image_card_top10"
                android:src="@drawable/ic_test_2"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/text_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="薄荷色超酷轻盈跑鞋"
                android:padding="5dp"
                android:background="#b0ffffff"
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/text_card_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_vertical|right"
                android:textSize="18sp"
                android:text="¥1000,00"
                android:paddingRight="10dp"
                android:textColor="@color/colorAccent2"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7ffbf7f7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_top10detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="简单描述..."
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B6B6B6"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7ffbf7f7">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:iiv_color="#C0C0C0"
                app:iiv_icon="gmd-favorite"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view_top10_like" />

            <TextView
                android:id="@+id/text_top10_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="喜欢"
                android:textColor="#C0C0C0"
                android:layout_alignTop="@+id/view_top10_like"
                android:layout_toRightOf="@+id/view_top10_like"
                android:layout_toEndOf="@+id/view_top10_like" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:iiv_color="#C0C0C0"
                app:iiv_icon="gmd-shopping-cart"
                android:id="@+id/view_top10_buy"
                android:layout_alignTop="@+id/text_top10_like"
                android:layout_toRightOf="@+id/text_top10_like"
                android:layout_toEndOf="@+id/text_top10_like"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp" />

            <TextView
                android:id="@+id/text_top10_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="加入购物车"
                android:textColor="#C0C0C0"
                android:layout_alignTop="@+id/view_top10_like"
                android:layout_toRightOf="@+id/view_top10_buy"
                android:layout_toEndOf="@+id/view_top10_buy" />

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:iiv_color="#C0C0C0"
                app:iiv_icon="gmd-share"
                android:id="@+id/view_top10_share"
                android:layout_alignTop="@+id/view_top10_like"
                android:layout_toLeftOf="@+id/text_top10_comment"
                android:layout_toStartOf="@+id/text_top10_comment" />

            <TextView
                android:id="@+id/text_top10_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="分享"
                android:textColor="#C0C0C0"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignTop="@+id/view_top10_like"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>