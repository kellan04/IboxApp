<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_show"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MUYOU"
        android:id="@+id/uesr_name"
        android:layout_alignBottom="@+id/textView21"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="上衣"
        android:gravity="center"
        android:textColor="@color/cursorTextColor_Dark"
        android:id="@+id/textView21"
        android:background="@color/cursorTextColor"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="安利来了！给你看看我的心夹克!"
        android:id="@+id/show_goods_name"
        android:layout_below="@+id/profile_image"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="15dp"
        android:id="@+id/show_goods_image"
        android:layout_alignTop="@+id/show_goods_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/test"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="纯粹手拍，没PS"
        android:id="@+id/show_goods_detail"
        android:layout_below="@+id/show_goods_name"
        android:layout_alignLeft="@+id/show_goods_name"
        android:layout_alignStart="@+id/show_goods_name"
        android:layout_marginTop="10dp"/>

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:iiv_color="#C0C0C0"
        app:iiv_icon="gmd-favorite"
        android:id="@+id/view_favorite"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/show_goods_image"
        android:layout_alignLeft="@+id/show_goods_detail"
        android:layout_alignStart="@+id/show_goods_detail" />

    <TextView
        android:id="@+id/text_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="12"
        android:textColor="#C0C0C0"
        android:layout_alignTop="@+id/view_favorite"
        android:layout_toRightOf="@+id/view_favorite"
        android:layout_toEndOf="@+id/view_favorite" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:iiv_color="#C0C0C0"
        app:iiv_icon="gmd-comment"
        android:id="@+id/view_comment"
        android:layout_alignTop="@+id/view_favorite"
        android:layout_alignRight="@+id/uesr_name"
        android:layout_alignEnd="@+id/uesr_name" />

    <TextView
        android:id="@+id/text_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="9"
        android:textColor="#C0C0C0"
        android:layout_alignTop="@+id/view_comment"
        android:layout_toRightOf="@+id/view_comment"
        android:layout_toEndOf="@+id/view_comment" />

</RelativeLayout>