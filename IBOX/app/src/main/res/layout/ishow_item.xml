<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ishow_item"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ishow_item_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MUYOU"
        android:id="@+id/ishow_item_uesr_name"
        android:layout_alignBottom="@+id/ishow_item_category"
        android:layout_toRightOf="@+id/ishow_item_profile_image"
        android:layout_toEndOf="@+id/ishow_item_profile_image" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:text="上衣"
        android:gravity="center"
        android:textColor="@color/cursorTextColor_Dark"
        android:id="@+id/ishow_item_category"
        android:background="@color/cursorTextColor"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="安利来了！给你看看我的心夹克!"
        android:id="@+id/ishow_item_goods_title"
        android:layout_below="@+id/ishow_item_profile_image"
        android:layout_alignLeft="@+id/ishow_item_profile_image"
        android:layout_alignStart="@+id/ishow_item_profile_image" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="15dp"
        android:id="@+id/ishow_item_goods_image"
        android:layout_alignTop="@+id/ishow_item_goods_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_test_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="纯粹手拍，没PS"
        android:id="@+id/ishow_item_goods_detail"
        android:layout_below="@+id/ishow_item_goods_title"
        android:layout_alignLeft="@+id/ishow_item_goods_title"
        android:layout_alignStart="@+id/ishow_item_goods_title"
        android:layout_marginTop="10dp"/>

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:iiv_color="#C0C0C0"
        app:iiv_icon="gmd-favorite"
        android:id="@+id/view_favorite"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ishow_item_goods_image"
        android:layout_alignLeft="@+id/ishow_item_goods_detail"
        android:layout_alignStart="@+id/ishow_item_goods_detail" />

    <TextView
        android:id="@+id/text_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="12"
        android:textColor="#C0C0C0"
        android:layout_alignTop="@+id/view_favorite"
        android:layout_toRightOf="@+id/view_favorite"
        android:layout_toEndOf="@+id/view_favorite"
        android:layout_marginLeft="5dp"/>

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:iiv_color="#C0C0C0"
        app:iiv_icon="gmd-comment"
        android:id="@+id/view_comment"
        android:layout_alignTop="@+id/view_favorite"
        android:layout_toRightOf="@+id/text_favorite"
        android:layout_toEndOf="@+id/text_favorite"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/text_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="9"
        android:textColor="#C0C0C0"
        android:layout_alignTop="@+id/view_comment"
        android:layout_toRightOf="@+id/view_comment"
        android:layout_toEndOf="@+id/view_comment"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>