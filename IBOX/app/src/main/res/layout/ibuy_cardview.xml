<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_buy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    android:background="@color/white"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff" >

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/image_button_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white_fab"
                fab:fab_colorPressed="@color/white_pressed_fab"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/user_img_7"/>

            <TextView
                android:id="@+id/text_view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="鱼丁"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.12"
                android:text="交易进行中"
                android:textSize="15sp"
                android:textColor="@color/circle_textview_red"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_card_buy"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/p3" />

            <TextView
                android:id="@+id/text_card_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_vertical"
                android:background="#b0ffffff"
                android:text="Sns x Reebok Insta Pump"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"  />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="联系卖家"
                android:textSize="15sp"
                android:id="@+id/button_connect"
                android:textColor="@color/cursorTextColor_Dark"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_weight="1"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="物流"
                android:textSize="15sp"
                android:id="@+id/button_logistics"
                android:textColor="@color/cursorTextColor_Dark"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_weight="1"/>
            <Button
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="确认收货"
                android:textSize="15sp"
                android:id="@+id/button_receipt"
                android:textColor="@color/colorTextView"
                android:textStyle="bold"
                android:background="@color/circle_textview_red"
                android:layout_alignParentRight="true"
                android:layout_weight="1"/>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>