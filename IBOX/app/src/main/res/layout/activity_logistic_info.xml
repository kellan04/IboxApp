<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iboxapp.ibox.ui.LogisticInfoActivity">

    <include
        android:id="@+id/back_toolbar"
        layout="@layout/simple_toolbar"/>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/text_padding"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/imageview_logistic"
                    android:layout_width="@dimen/text_height"
                    android:layout_height="@dimen/text_height"
                    android:layout_marginRight="@dimen/text_padding"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/textview_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logistic_static"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/imageview_logistic"/>
                <TextView
                    android:id="@+id/textview_static1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派送中"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@id/textview_static"/>
                <TextView
                    android:id="@+id/textview_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logistic_source"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/imageview_logistic"
                    android:layout_below="@id/textview_static"/>
                <TextView
                    android:id="@+id/textview_source1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="box快递"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/textview_static1"
                    android:layout_toRightOf="@id/textview_source"/>
                <TextView
                    android:id="@+id/textview_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logistic_number"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/imageview_logistic"
                    android:layout_below="@id/textview_source"/>
                <TextView
                    android:id="@+id/textview_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/textview_source1"
                    android:layout_toRightOf="@id/textview_number" />
                <TextView
                    android:id="@+id/textview_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logistic_phone"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/imageview_logistic"
                    android:layout_below="@id/textview_number"/>
                <TextView
                    android:id="@+id/textview_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:layout_below="@id/textview_number1"
                    android:layout_toRightOf="@id/textview_phone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_underline2" />


            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    <!--</ScrollView>-->
</LinearLayout>
