<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iboxapp.ibox.IshowFragment" >

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view_show"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
            android:id="@+id/show_recyclerview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/imageButton_main"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/show_explore"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/imageButton_find"
                        android:layout_weight="1"
                        android:background="@color/white" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/imageButton_selection"
                        android:layout_weight="1"
                        android:background="@color/white" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/show_recommend"
                    android:layout_margin="5dp"/>



            </LinearLayout>

        </com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>

    </android.support.design.widget.CoordinatorLayout>


</FrameLayout>
