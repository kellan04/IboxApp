<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bigkoo.convenientbanner.ConvenientBanner
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ishow_convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:canLoop="true" />
    <!--canLoop控制循环与否-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/show_explore"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/imageButton_find"
            android:layout_weight="1"
            android:background="@drawable/ic_test_3"
            android:scaleType="centerCrop"
            android:text="发现"
            android:textSize="30sp"
            android:textColor="@color/colorTextView"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/imageButton_selection"
            android:layout_weight="1"
            android:background="@drawable/ic_test_3"
            android:scaleType="centerCrop"
            android:text="精选"
            android:textSize="30sp"
            android:textColor="@color/colorTextView"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/show_recommend"
        android:layout_margin="5dp"/>

</LinearLayout>