<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/msg_chat_item">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myiamge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center" />



    <RelativeLayout
        android:layout_width="224dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user"
            android:textStyle="bold"
            android:id="@+id/message_text_username"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_text_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Thank you. You&apos;ve made a purchase fr Thank you. You&apos;"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10:30"
            android:id="@+id/message_text_time"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="65dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="#000000"
            android:id="@+id/message_text_amount"
            android:layout_below="@+id/message_text_time"
            android:background="@drawable/circle_textview"
            android:layout_marginLeft="65dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>




</LinearLayout>