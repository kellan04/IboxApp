<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cv_item_popular"
    card_view:cardCornerRadius="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/image_card_show"
                android:src="@drawable/goods"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="¥1,350.00"
                android:paddingLeft="240dp"
                android:background="#b0ffffff"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7ffbf7f7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popular_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="物品描述"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7ffbf7f7">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/view_like"
                android:src="@drawable/ic_launcher"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小美"
                android:textSize="18sp"
                android:id="@+id/popular_username"
                android:textColor="#C0C0C0"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/view_like"
                android:layout_toRightOf="@+id/view_like"
                android:layout_toEndOf="@+id/view_like"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="发布"
                android:textColor="#C0C0C0"
                android:layout_alignTop="@+id/popular_username"
                android:layout_toRightOf="@+id/popular_username"
                android:layout_toEndOf="@+id/popular_username" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>