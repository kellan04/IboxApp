<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iboxapp.ibox.ui.PayOnlineActivity">

    <include
        android:id="@+id/back_toolbar"
        layout="@layout/simple_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0">

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/pay_third"
             android:textSize="15sp"
             android:textColor="@color/black"
             android:padding="@dimen/text_padding"
             android:background="@color/white"/>

         <TextView
             android:id="@+id/textView_padding1"
             android:layout_width="match_parent"
             android:layout_height="@dimen/text_underline2"/>


         <RadioGroup
             android:id="@+id/radioGroup1"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         <RadioButton
             android:id="@+id/radio1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/pay_alipay"
             android:textSize="15sp"
             android:padding="@dimen/text_padding"
             android:button="@null"
             android:drawableRight="@drawable/radiogroup_button"
             android:background="@color/white"/>

         <TextView
             android:id="@+id/textView_padding2"
             android:layout_width="match_parent"
             android:layout_height="@dimen/text_underline1"/>

         <RadioButton
             android:id="@+id/radio2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/pay_qq"
             android:textSize="15sp"
             android:padding="@dimen/text_padding"
             android:button="@null"
             android:drawableRight="@drawable/radiogroup_button"
             android:background="@color/white"/>

         <TextView
             android:id="@+id/textView_padding3"
             android:layout_width="match_parent"
             android:layout_height="@dimen/text_underline1"/>


         <RadioButton
             android:id="@+id/radio3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/pay_wechat"
             android:textSize="15sp"
             android:padding="@dimen/text_padding"
             android:button="@null"
             android:drawableRight="@drawable/radiogroup_button"
             android:background="@color/white"/>

         <TextView
             android:id="@+id/textView_padding4"
             android:layout_width="match_parent"
             android:layout_height="@dimen/text_underline1"/>

         <RadioButton
             android:id="@+id/radio4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/pay_bank"
             android:textSize="15sp"
             android:padding="@dimen/text_padding"
             android:button="@null"
             android:drawableRight="@drawable/radiogroup_button"
             android:background="@color/white"/>

         </RadioGroup>

     </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pay_online_sure_button"
        android:text="@string/pay_ensure"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

</LinearLayout>
