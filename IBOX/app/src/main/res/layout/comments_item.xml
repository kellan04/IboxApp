<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/comment_item">

    <!--<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center" >-->

    <ImageButton
        android:id="@+id/user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_account_circle_black_36dp"
        android:layout_gravity="center" />

    <!--</LinearLayout>-->



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/comment_text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="username"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left" />

        <!-- <TextView
             android:id="@+id/message_text_username"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:text="user"
             android:layout_gravity="center" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment——好评！"
            android:textSize="15sp"
            android:id="@+id/comment_text_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="1分钟前"
            android:textSize="15sp"
            android:id="@+id/comment_text_time"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>


</LinearLayout>